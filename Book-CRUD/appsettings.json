{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  /*
 * Configuration for database connection strings.
 * "DefaultConnection" specifies the connection details to the SQL Server instance on MSI-C281 with the database named 'Bulky'.
 * It uses trusted connection for authentication and trusts the server certificate for secure communication, without "trustservercertificate", it cant authenticate and it will fail to build.
 */
  "ConnectionStrings": {
    "DefaultConnection": "Server = MSI-C281\\SQLEXPRESS; Database = Bulky; Trusted_Connection = True; TrustServerCertificate = Yes"
  }
}
